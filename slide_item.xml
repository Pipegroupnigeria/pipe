<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/viewcenter"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imagemessage"
            android:layout_above="@id/viewcenter"
            android:src="@mipmap/pipemeet" />


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/viewcenter">

            <TextView
                android:id="@+id/slidetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintVertical_bias="0.25"
                android:fontFamily="@font/gothicb"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Save and Invest"
                android:textColor="#dd000000"
                />

            <TextView
                android:id="@+id/subtext"
                app:layout_constraintTop_toBottomOf="@id/slidetitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintVertical_bias="0.05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothic"
                android:textSize="13sp"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:gravity="center"
                android:text="Save, inveest and get double of what ever you put in your wallet"
                android:textColor="#aa000000"
                />


        </android.support.constraint.ConstraintLayout>






    </RelativeLayout>




</android.support.constraint.ConstraintLayout>